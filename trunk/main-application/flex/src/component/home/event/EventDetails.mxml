<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml">
	<mx:Script>
		<![CDATA[
			import mx.core.Application;
		]]>
	</mx:Script>
	<mx:VBox width="100%" height="100%" verticalAlign="middle" horizontalAlign="center"
		 backgroundColor="white" dropShadowEnabled="true" borderStyle="solid">
		 <mx:HBox width="100%" horizontalAlign="center" verticalAlign="middle">
		 	<mx:Label text="Default Event Details" fontFamily="arial" fontSize="14"/>
		 </mx:HBox>
		<mx:Form>
		        <mx:FormItem label="Event ID:">
		            <mx:Label text="{Application.application.aHandleToAccount.currEventID}" />
		        </mx:FormItem>
		        <mx:FormItem label="Event Name:">
		            <mx:Label text="{Application.application.aHandleToAccount.currEventName}" />
		        </mx:FormItem>
		        <mx:FormItem label="Event Community:">
		            <mx:Label text="{Application.application.aHandleToAccount.currCommunity}" />
		        </mx:FormItem>
		        <mx:FormItem label="Event Context:">
		            <mx:Label text="{Application.application.aHandleToAccount.currContext}" />
		        </mx:FormItem>					        				        				
		</mx:Form>
	</mx:VBox>
</mx:Canvas>
